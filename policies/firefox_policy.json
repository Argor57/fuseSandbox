{
  "allow_network": true,
  "readable_paths": [
    "/proc",
    "/dev",
    "/sys",
    "/etc/ssl",
    "/usr/lib/firefox",
    "/usr/lib/x86_64-linux-gnu",
    "/lib/x86_64-linux-gnu",
    "/usr/share/fonts",
    "/usr/share/icons",
    "/usr/share/mime",
    "/usr/share/glib-2.0",
    "/usr/share/pixmaps",
    "/usr/share/themes",
    "/usr/share/X11",
    "{mount_point}/usr/lib/firefox",
    "{mount_point}/usr/lib/x86_64-linux-gnu",
    "{mount_point}/lib/x86_64-linux-gnu",
    "{mount_point}/usr/share/fonts",
    "{mount_point}/usr/share/icons",
    "{mount_point}/usr/share/mime",
    "{mount_point}/usr/share/glib-2.0",
    "{mount_point}/usr/share/pixmaps",
    "{mount_point}/usr/share/themes",
    "{mount_point}/usr/share/X11"
  ],
  "writable_paths": [
    "{mount_point}/tmp",
    "{mount_point}/var/tmp",
    "{mount_point}/home/{username}/.mozilla"
  ],
  "executable_paths": [
    "{mount_point}/usr/lib/firefox/firefox",
    "{mount_point}/usr/lib/firefox/firefox-bin",
    "{mount_point}/usr/bin"
  ],
  "restricted_paths": [
    "/home",
    "/etc",
    "/usr",
    "/bin",
    "/lib",
    "/opt",
    "/mnt",
    "/media",
    "/root",
    "/sbin",
    "/srv",
    "/sys",
    "/var",
    "{mount_point}/home/{username}"
  ],
  "bubblewrap_params": [
    "--new-session",
    "--dev-bind", "/dev", "/dev",
    "--proc", "/proc",
    "--ro-bind", "/sys", "/sys",
    "--ro-bind", "/etc/ssl", "/etc/ssl",
    "--ro-bind", "/usr/lib/firefox", "{mount_point}/usr/lib/firefox",
    "--ro-bind", "/usr/lib/x86_64-linux-gnu", "{mount_point}/usr/lib/x86_64-linux-gnu",
    "--ro-bind", "/lib/x86_64-linux-gnu", "{mount_point}/lib/x86_64-linux-gnu",
    "--ro-bind", "/usr/share/fonts", "{mount_point}/usr/share/fonts",
    "--ro-bind", "/usr/share/icons", "{mount_point}/usr/share/icons",
    "--ro-bind", "/usr/share/mime", "{mount_point}/usr/share/mime",
    "--ro-bind", "/usr/share/glib-2.0", "{mount_point}/usr/share/glib-2.0",
    "--ro-bind", "/usr/share/pixmaps", "{mount_point}/usr/share/pixmaps",
    "--ro-bind", "/usr/share/themes", "{mount_point}/usr/share/themes",
    "--ro-bind", "/usr/share/X11", "{mount_point}/usr/share/X11",
    "--bind", "{mount_point}/home/{username}/.mozilla", "/home/{username}/.mozilla",
    "--tmpfs", "/tmp",
    "--tmpfs", "/var/tmp",
    "--bind", "{mount_point}", "/",
    "--chdir", "{mount_point}"
  ]
}
